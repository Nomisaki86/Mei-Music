<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <!--
        User-scoped settings storage used by the desktop app.
        This file declares the section where runtime values (for example last selected song index)
        are serialized between sessions.
    -->
    <configSections>
        <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="Mei_Music.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <userSettings>
        <Mei_Music.Properties.Settings>
            <!-- Persists the selected row index so startup can restore list focus context. -->
            <setting name="LastSelectedIndex" serializeAs="String">
                <value>-1</value>
            </setting>
            <!-- Standard .NET Settings upgrade flag used on version changes. -->
            <setting name="UpgradeRequired" serializeAs="String">
                <value>True</value>
            </setting>
        </Mei_Music.Properties.Settings>
    </userSettings>
</configuration>