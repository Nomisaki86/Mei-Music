<UserControl x:Class="Mei_Music.AddToPlaylistCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:Mei_Music.Converters"
             mc:Ignorable="d"
             Width="400"
             Height="420">
    <UserControl.Resources>
        <converters:PathToImageSourceConverter x:Key="PathToImageSourceConverter"/>

        <Style x:Key="AddToPlaylistRowButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ContextMenuCardActionButtonStyle}">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder"
                                Background="Transparent"
                                CornerRadius="12"
                                Padding="10,8">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#EEF1F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource PlaylistOverlayCardContainerStyle}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="56"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="HeaderDragBorder"
                    Grid.Row="0"
                    Style="{StaticResource PlaylistOverlayCardHeaderDragStyle}"
                    MouseLeftButtonDown="HeaderDragBorder_MouseLeftButtonDown"
                    MouseMove="HeaderDragBorder_MouseMove"
                    MouseLeftButtonUp="HeaderDragBorder_MouseLeftButtonUp">
                <Grid ClipToBounds="False">
                    <TextBlock Text="Add to Playlist"
                               Style="{StaticResource PlaylistOverlayCardTitleTextStyle}"/>
                    <Button x:Name="CloseButton"
                            Panel.ZIndex="10"
                            Style="{StaticResource PlaylistOverlayCardCloseButtonStyle}"
                            Click="CloseButton_Click">
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="22,0,22,18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,18,0,0">
                    <TextBlock Text="Default Order"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#4A5365"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid x:Name="CardScrollScope" Grid.Row="2">
                <ScrollViewer x:Name="CardScrollViewer"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled"
                              ScrollChanged="CardScrollViewer_ScrollChanged">
                    <StackPanel>
                        <Button x:Name="CreatePlaylistButton"
                                Style="{StaticResource AddToPlaylistRowButtonStyle}"
                                Click="CreatePlaylistButton_Click"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="56"
                                        Height="56"
                                        CornerRadius="12"
                                        Background="#DDE2EB"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="+"
                                               FontSize="28"
                                               FontWeight="Light"
                                               Foreground="#3B4458"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="0,-2,0,0"/>
                                </Border>

                                <TextBlock Grid.Column="1"
                                           Text="Create New Playlist"
                                           Margin="14,0,0,0"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Foreground="#3B4458"/>
                            </Grid>
                        </Button>

                        <ItemsControl x:Name="PlaylistItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource AddToPlaylistRowButtonStyle}"
                                            Tag="{Binding}"
                                            Click="PlaylistButton_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="56"
                                                    Height="56"
                                                    CornerRadius="12"
                                                    Background="#DDE2EB"
                                                    VerticalAlignment="Center"
                                                    ClipToBounds="True">
                                                <Grid>
                                                    <Rectangle Fill="White"
                                                               Opacity="0.85">
                                                        <Rectangle.OpacityMask>
                                                            <ImageBrush ImageSource="/Resources/Images/music-player.png"
                                                                        Stretch="Uniform"/>
                                                        </Rectangle.OpacityMask>
                                                    </Rectangle>
                                                    <Image Source="{Binding IconPath, Converter={StaticResource PathToImageSourceConverter}}"
                                                           Stretch="UniformToFill"/>
                                                </Grid>
                                            </Border>

                                            <StackPanel Grid.Column="1"
                                                        Margin="14,0,0,0"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="#3A4356"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding SongNames.Count, StringFormat={}{0} songs}"
                                                           FontSize="12"
                                                           Foreground="#7A8393"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoPlaylistsText"
                                   Visibility="Collapsed"
                                   Margin="6,8,0,0"
                                   Text="No playlists yet. Create one to get started."
                                   FontSize="15"
                                   Foreground="#7A8393"/>
                    </StackPanel>
                </ScrollViewer>

                <ScrollBar x:Name="CardOverlayScrollBar"
                           Width="10"
                           Margin="0,0,2,0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Stretch"
                           Orientation="Vertical"
                           Tag="{Binding IsMouseOver, ElementName=CardScrollScope}"
                           Opacity="0"
                           Minimum="0"
                           Maximum="0"
                           SmallChange="16"
                           LargeChange="32"
                           Panel.ZIndex="8"
                           ValueChanged="CardOverlayScrollBar_ValueChanged"
                           Style="{StaticResource AutoHideHostBoundScrollBar}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
