<Window x:Class="Mei_Music.DuplicateFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mei_Music"
        mc:Ignorable="d"
        Title="Duplicate File Name Detected" Height="170" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <!--
        Conflict-resolution dialog shown during media import when an incoming song name already exists.
        The selected action is returned by code-behind through Rename/Replace/Cancel button handlers.
    -->
    <StackPanel Margin="20">
        <TextBlock TextWrapping="Wrap" Text="A file with this name already exists in the playlist. What would you like to do?"
                   FontSize="16" Margin="0,0,0,20" HorizontalAlignment="Center">
        </TextBlock>
        <!-- Action row: each button maps to a distinct duplicate-resolution path. -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="RenameBtn" Content="Rename" Style="{StaticResource DialogButtonStyle}" Click="RenameBtn_Click"/>
            <Button x:Name="ReplaceBtn" Content="Replace" Style="{StaticResource DialogButtonStyle}" Click="ReplaceBtn_Click"/>
            <Button x:Name="CancelBtn" Content="Cancel" Style="{StaticResource DialogButtonStyle}" Click="CancelBtn_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
