<Window x:Class="Mei_Music.DeleteSongConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mei_Music"
        mc:Ignorable="d"
        Title="Delete Confirmation" Height="140" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <!--
        Confirmation dialog used before removing a song from library/storage.
        Button clicks map to code-behind handlers that set IsConfirmed and close the dialog.
    -->
    <StackPanel Margin="20">
        <!-- Message Text -->
        <TextBlock x:Name="MessageText" 
                   Text="Are you sure you want to delete this item?" 
                   TextWrapping="Wrap" 
                   FontSize="14" 
                   Margin="0,0,0,10" 
                   HorizontalAlignment="Center"/>

        <!-- Decision actions exposed to callers as Yes/No confirmation result. -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Yes" Style="{StaticResource DialogButtonStyle}" Click="YesButton_Click"/>
            <Button Content="No" Style="{StaticResource DialogButtonStyle}" Click="NoButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
