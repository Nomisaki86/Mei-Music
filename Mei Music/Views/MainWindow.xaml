<Window  x:Class="Mei_Music.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Mei_Music.Converters"
        xmlns:local="clr-namespace:Mei_Music"
        xmlns:models="clr-namespace:Mei_Music.Models"
        Title="Mei Music" Height="600" Width="900"
        Deactivated="Window_Deactivated"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="#1E1E1E">

    <!--
        Main shell layout map:
        - Row 0: custom title bar
        - Row 1: content area (left navigation + right playlist/song panel)
        - Row 2: playback transport bar
        Additional overlays (playlist creation/context menus) are hosted at root grid level.
    -->
    <Window.Resources>
        <!-- Value converters used by list row templates and playlist icon rendering. -->
        <converters:DisplayIndexConverter x:Key="DisplayIndexConverter"/>
        <converters:PathToImageSourceConverter x:Key="PathToImageSourceConverter"/>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="0" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Background="#1b1f26" Grid.Row="0" Height="40" MouseDown="TitleBar_MouseDown">
            <DockPanel VerticalAlignment="Center">

                <!--Mei Music Icon-->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Mei Music" Foreground="#ebf2f4" FontSize="15" FontWeight="Bold" Margin="0,0,10,0"/>
                </StackPanel>

                <!-- Right Side (window control buttons) -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="â”€" Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}" />
                      <Button Content="â˜" Click="Maximize_Click" Style="{StaticResource TitleBarButtonStyle}" />
                    <Button Content="âœ•" Click="Close_Click" Style="{StaticResource TitleBarCloseButtonStyle}" />
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- Main Content Area: left navigation and right song management/playback scope. -->
        <Grid Grid.Row="1" Background="{DynamicResource RightPanelBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="195" MinWidth="195"/>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: library scope selectors and created playlist navigation. -->
            <Border Grid.Row="0" Grid.Column="0" Background="{DynamicResource LeftPanelBackground}" Margin="0">
                <Grid Margin="10,12,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Primary scope selector: when checked, right panel shows all songs. -->
                    <RadioButton x:Name="AllSongsButton"
                                 Grid.Row="0"
                                 GroupName="SidebarNavGroup"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,0,0,6"
                                 Content="All"
                                 IsChecked="True"
                                 Checked="AllSongsButton_Checked"
                                 ToolTip="Show all songs"
                                 Style="{StaticResource SidebarSelectableCardRadioButtonStyle}">
                        <RadioButton.Tag>
                            <Rectangle Width="16"
                                       Height="16"
                                       Fill="{StaticResource SidebarGlyphBrush}"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       SnapsToDevicePixels="True"
                                       UseLayoutRounding="True">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="pack://application:,,,/Resources/Images/music-player.png"
                                                Stretch="Uniform"
                                                RenderOptions.BitmapScalingMode="Fant"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </RadioButton.Tag>
                    </RadioButton>

                    <!-- Secondary scope selector: reserved for user-liked songs. -->
                    <RadioButton x:Name="LikedSongsButton"
                                 Grid.Row="1"
                                 GroupName="SidebarNavGroup"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,0,0,8"
                                 Content="Liked"
                                 Checked="LikedSongsButton_Checked"
                                 ToolTip="Show liked songs"
                                 Style="{StaticResource SidebarSelectableCardRadioButtonStyle}">
                        <RadioButton.Tag>
                            <Rectangle Width="16"
                                       Height="16"
                                       Fill="{StaticResource SidebarGlyphBrush}"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       SnapsToDevicePixels="True"
                                       UseLayoutRounding="True"
                                       RenderTransformOrigin="0.5,0.5">
                                <Rectangle.RenderTransform>
                                    <ScaleTransform ScaleX="0.92" ScaleY="0.92"/>
                                </Rectangle.RenderTransform>
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="pack://application:,,,/Resources/Images/heart-filled.png"
                                                Stretch="Uniform"
                                                RenderOptions.BitmapScalingMode="Fant"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </RadioButton.Tag>
                    </RadioButton>

                    <Grid Grid.Row="2" Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ToggleButton x:Name="PlaylistsToggleButton"
                                      Grid.Column="0"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,0"
                                      VerticalAlignment="Center"
                                      IsChecked="True"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      Foreground="{StaticResource SidebarForegroundBrush}"
                                      Padding="7,0,0,0"
                                      Cursor="Hand">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Created Playlists"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{TemplateBinding Foreground}"
                                                                   VerticalAlignment="Center"/>
                                                        <Rectangle x:Name="PlaylistsArrowIcon"
                                                                   Width="12"
                                                                   Height="12"
                                                                   Margin="6,1,0,0"
                                                                   VerticalAlignment="Center"
                                                                   Fill="{TemplateBinding Foreground}"
                                                                   RenderOptions.BitmapScalingMode="Fant"
                                                                   SnapsToDevicePixels="True">
                                                            <Rectangle.OpacityMask>
                                                                <ImageBrush ImageSource="pack://application:,,,/Resources/Images/arrow-up.png"
                                                                            Stretch="Uniform"
                                                                            RenderOptions.BitmapScalingMode="Fant"/>
                                                            </Rectangle.OpacityMask>
                                                        </Rectangle>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="PlaylistsArrowIcon"
                                                                Property="OpacityMask">
                                                            <Setter.Value>
                                                                <ImageBrush ImageSource="pack://application:,,,/Resources/Images/arrow-down.png"
                                                                            Stretch="Uniform"
                                                                            RenderOptions.BitmapScalingMode="Fant"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>

                        <Button x:Name="CreateAlbumButton"
                                Grid.Column="1"
                                Width="24"
                                Height="24"
                                Margin="8,0,0,0"
                                ToolTip="Create playlist"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Cursor="Hand"
                                VerticalAlignment="Center"
                                Click="OpenCreatePlaylistDialog">
                            <Grid>
                                <Ellipse Fill="#DEE3EA"
                                         Width="24"
                                         Height="24"/>
                                <TextBlock Text="+"
                                           Foreground="#6B7380"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </Grid>

                    <!-- When no playlists: show big Create card. When any exist: show list. Header + always opens create dialog. -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="PlaylistAlbumsContainer">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=PlaylistsToggleButton}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- Panel 1: visible when CreatedPlaylists.Count == 0 -->
                            <StackPanel x:Name="CreateFirstPlaylistPanel">
                                <Button x:Name="CreateFirstPlaylistButton"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,2,0,0"
                                        Content="Create"
                                        ToolTip="Create playlist"
                                        Click="OpenCreatePlaylistDialog"
                                        Style="{StaticResource SidebarActionCardButtonStyle}"/>
                            </StackPanel>

                            <!-- Panel 2: visible when CreatedPlaylists.Count > 0; list of created playlists -->
                            <ItemsControl x:Name="PlaylistListPanel" ItemsSource="{Binding CreatedPlaylists}" Visibility="Collapsed">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton HorizontalAlignment="Stretch" Margin="0,2,0,0" Padding="7,6"
                                                HorizontalContentAlignment="Left" Cursor="Hand"
                                                Style="{StaticResource SidebarPlaylistCardButtonStyle}"
                                                Checked="PlaylistItem_Click"
                                                MouseRightButtonUp="PlaylistItem_RightClick">
                                            <RadioButton.Content>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Width="36" Height="36" CornerRadius="8" Background="#D2D9E3" VerticalAlignment="Center">
                                                        <Grid>
                                                            <Grid.OpacityMask>
                                                                <VisualBrush>
                                                                    <VisualBrush.Visual>
                                                                        <Border Background="Black" Width="36" Height="36" CornerRadius="8"/>
                                                                    </VisualBrush.Visual>
                                                                </VisualBrush>
                                                            </Grid.OpacityMask>
                                                            <Image Source="{Binding IconPath, Converter={StaticResource PathToImageSourceConverter}}" Stretch="UniformToFill" Width="36" Height="36" RenderOptions.BitmapScalingMode="HighQuality"/>
                                                        </Grid>
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="{Binding Title}" VerticalAlignment="Center" Margin="10,0,0,0"
                                                               Foreground="{StaticResource SidebarForegroundBrush}" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                            </RadioButton.Content>
                                        </RadioButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <GridSplitter Grid.Row="0"
                          Grid.Column="1"
                          Width="12"
                          HorizontalAlignment="Center"
                          Margin="-6,0,-6,0"
                          VerticalAlignment="Stretch"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Columns"
                          ShowsPreview="False"
                          Cursor="SizeWE"
                          Background="Transparent"
                          SnapsToDevicePixels="True"
                          Panel.ZIndex="10"/>

            <!-- Main Content on the Right: toolbar, song list, custom scroll behavior. -->
            <Grid Grid.Row="0" Grid.Column="2" Background="{DynamicResource RightPanelBackground}" VerticalAlignment="Stretch">
                <Border>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Row 0: Toolbar -->
                        <Grid Grid.Row="0">
                            <!-- Playlist Label -->
                            <Label x:Name="PlaylistHeaderLabel" Content="All" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="4,0,0,0"/>

                            <!-- Upload Button-->
                            <Button x:Name="PlusButton"
                                    ToolTip="Upload Audio"
                                    FontSize="25"
                                    Margin="0,0,70,0"
                                    Click="PlusButton_Click"
                                    Style="{StaticResource PlaylistToolbarButtonStyle}">
                                <TextBlock Text="+" 
                                           FontSize="20"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           Padding="0,0,0,2"/>
                            </Button>

                            <!-- Plus Popup Menu -->
                            <Popup x:Name="PlusPopupMenu" 
                                    PlacementTarget="{Binding ElementName=PlusButton}" 
                                    Placement="Bottom"  
                                    AllowsTransparency="True" 
                                    HorizontalOffset="-150">
                                <Border Background="#1E1E1E" CornerRadius="5" Width="175">
                                    <StackPanel>
                                        <Button Content="Upload from Computer" Style="{StaticResource DropdownItemStyle}" Click="UploadFromComputer_Click"/>
                                        <Button Content="Upload through URL" Style="{StaticResource DropdownItemStyle}" Click="SearchThroughURL_Click"/>
                                        <!-- Add more options as needed -->
                                    </StackPanel>
                                </Border>
                            </Popup>

                            <!-- Refresh Button -->
                            <Button x:Name="RefreshButton" 
                                    ToolTip="Refresh List"
                                    FontSize="20"
                                    Margin="0,0,40,0"
                                    Command="{Binding RefreshSongsInUICommand}"
                                    Style="{StaticResource PlaylistToolbarButtonStyle}">
                                <TextBlock Text="âŸ³" 
                                           FontSize="16"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           Padding="0,0,0,2"/>
                            </Button>

                            <!-- Sort Button -->
                            <Button x:Name="SortButton" 
                                    ToolTip="Sort List"
                                    Content="â†‘â†“" 
                                    Margin="0,0,12,0"
                                    Click="SortButton_Click"
                                    Style="{StaticResource PlaylistToolbarButtonStyle}"/>

                            <!-- Sort Popup Menu -->
                            <Popup x:Name="SortPopupMenu" 
                                    PlacementTarget="{Binding ElementName=PlusButton}" 
                                    Placement="Bottom"  
                                    AllowsTransparency="True" 
                                    HorizontalOffset="-92">
                                <Border Background="#1E1E1E" CornerRadius="5" Width="175">
                                    <StackPanel>
                                        <Button Content="Alphabetical Order" Style="{StaticResource DropdownItemStyle}" Command="{Binding SortPlaylistCommand}" CommandParameter="Alphabetical"/>
                                        <Button Content="Most Recent Modification" Style="{StaticResource DropdownItemStyle}" Command="{Binding SortPlaylistCommand}" CommandParameter="ModificationDate"/>
                                        <!-- Add more options as needed -->
                                    </StackPanel>
                                </Border>
                            </Popup>
                            
                            <!-- Song Context Menu Popup -->
                            <Popup x:Name="SongContextMenuPopup"
                                   AllowsTransparency="True"
                                   Placement="Bottom"
                                   HorizontalOffset="-10"
                                   VerticalOffset="-10"
                                   StaysOpen="False">
                                <Border Background="Transparent" Padding="10">
                                    <local:SongContextMenuCard x:Name="SongContextMenu"
                                                               AddRequested="SongContextMenu_AddRequested"
                                                               RenameRequested="SongContextMenu_RenameRequested"
                                                               OpenFolderRequested="SongContextMenu_OpenFolderRequested"
                                                               DeleteRequested="SongContextMenu_DeleteRequested"/>
                                </Border>
                            </Popup>
                        </Grid>

                        <Grid x:Name="SongPanelScrollScope"
                              Grid.Row="1"
                              Grid.RowSpan="2"
                              Background="#FFE9ECF1">
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SongOverlayScrollBar"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.18"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SongOverlayScrollBar"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.18"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>

                            <!-- Song ListView -->
                            <ListView x:Name="UploadedSongList"
                                      Background="#FFE9ECF1"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                      ScrollViewer.CanContentScroll="True"
                                      VirtualizingPanel.ScrollUnit="Pixel"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                                      SelectionChanged="PlaySelectedSong"
                                      PreviewMouseRightButtonDown="UploadedSongList_PreviewMouseRightButtonDown"
                                      PreviewMouseRightButtonUp="UploadedSongList_PreviewMouseRightButtonUp"
                                      ScrollViewer.ScrollChanged="UploadedSongList_ScrollChanged"
                                      BorderThickness="0"
                                      ItemContainerStyle="{StaticResource SongListViewItemStyle}"
                                      SizeChanged="SongList_SizeChanged">

                                <ListView.ItemsSource>
                                    <CompositeCollection>
                                        <ListViewItem Focusable="False"
                                                      Margin="8,8,8,0"
                                                      Padding="0"
                                                      Style="{StaticResource SongListHeaderItemStyle}">
                                            <local:SongRowView IsHeader="True" Background="#FFE9ECF1"
                                                               ColumnLayout="{Binding SongColumnLayout, RelativeSource={RelativeSource AncestorType=Window}}" />
                                        </ListViewItem>

                                        <CollectionContainer x:Name="SongDataContainer"
                                                             Collection="{Binding DataContext.Songs, ElementName=RootWindow}" />

                                    </CompositeCollection>
                                </ListView.ItemsSource>

                                <ListView.Resources>
                                    <DataTemplate DataType="{x:Type models:Song}">
                                        <local:SongRowView Song="{Binding}"
                                                           ColumnLayout="{Binding SongColumnLayout, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           OptionsRequested="SongRow_OptionsRequested"
                                                           PlayPauseRequested="SongRow_PlayPauseRequested"/>
                                    </DataTemplate>
                                </ListView.Resources>
                            </ListView>

                            <ScrollBar x:Name="SongOverlayScrollBar"
                                       Width="10"
                                       Margin="0,0,2,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Stretch"
                                       Orientation="Vertical"
                                       Opacity="0"
                                       Minimum="0"
                                       Maximum="0"
                                       SmallChange="16"
                                       LargeChange="32"
                                       Panel.ZIndex="8"
                                       ValueChanged="SongOverlayScrollBar_ValueChanged"
                                       Style="{StaticResource CustomScrollBar}"/>
                        </Grid>


                    </Grid>
                </Border>
            </Grid>
            
            <!--Play bar-->
            <Grid Grid.Row="1" Grid.ColumnSpan="3" Height="68" Background="#FFECEFF1">
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Margin="14,0,8,0"
                            Padding="10,6"
                            VerticalAlignment="Center"
                            CornerRadius="8"
                            Background="#FFF5F7FA"
                            BorderBrush="#FFD8DEE6"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="â™ª"
                                       FontSize="12"
                                       Foreground="#5B6472"
                                       VerticalAlignment="Center"/>
                            <TextBlock Margin="6,0,0,0"
                                       Width="180"
                                       TextTrimming="CharacterEllipsis"
                                       Foreground="#3B4554"
                                       FontSize="12.5"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Text="{Binding CurrentSong.Name, TargetNullValue=No song playing, FallbackValue=No song playing}"/>
                        </StackPanel>
                    </Border>

                    <!-- Previous Song Button-->
                    <Button Grid.Column="1"
                            x:Name="PreviousSongButton"
                            Click="PreviousSongClicked"
                            Style="{StaticResource TransportControlButtonStyle}">
                        <Image Source="pack://application:,,,/Resources/Images/previous_button.png" Width="45" Height="45"/>
                    </Button>

                    <!-- Stop Song Button-->
                    <Button Grid.Column="2"
                            x:Name="StopSongButton"
                            Click="StopSongClicked"
                            Margin="2,0,2,0"
                            RenderOptions.BitmapScalingMode="Fant"
                            HorizontalAlignment="Left" Style="{StaticResource TransportControlButtonStyle}">
                        <Image Source="pack://application:,,,/Resources/Images/pause_button.png" Width="35" Height="35"/>
                    </Button>

                    <!-- Next Song Button-->
                    <Button Grid.Column="3"
                            x:Name="NextSongButton"
                            Click="NextSongClicked"
                            Style="{StaticResource TransportControlButtonStyle}">
                        <Image Source="pack://application:,,,/Resources/Images/next_button.png" Width="45" Height="45"/>
                    </Button>

                    <Grid Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="SongProgress_Timer" Grid.Column="0" Content="{Binding CurrentTimeText}" Margin="0,0,3,0"/>
                        <Slider Grid.Column="1" 
                                x:Name="SongProgressSlider" 
                                MinWidth="100" 
                                IsMoveToPointEnabled="False"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Center"
                                MouseMove="Slider_MouseMove"
                                PreviewMouseLeftButtonDown="SongProgressSlider_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="SongProgressSlider_PreviewMouseLeftButtonUp"
                                ValueChanged="SongProgressSlider_ValueChanged"
                                IsSelectionRangeEnabled="True"
                                SelectionStart="0"
                                Maximum="{Binding TotalTimeSeconds}"
                                Value="{Binding PlayProgress, Mode=TwoWay}"
                                SelectionEnd="{Binding Value, ElementName=SongProgressSlider}"
                                Style="{DynamicResource SongProgressCustomSlider}">
                        </Slider>

                        <Label x:Name="SongLength_Timer" Grid.Column="2" Content="{Binding TotalTimeText}" Margin="5,0,0,0"/>
                    </Grid>

                    <Label Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Content="ðŸ”Š"/>

                    <Slider x:Name="VolumeSlider" 
                            Grid.Column="6" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            Width="100" 
                            Margin="0,0,15,0"
                            MouseMove="Slider_MouseMove"
                            PreviewMouseLeftButtonDown="Slider_PreviewMouseLeftButtonDown"
                            PreviewMouseLeftButtonUp="Slider_PreviewMouseLeftButtonUp"
                            Minimum="0"
                            Maximum="100"
                            ValueChanged="VolumeSlider_ValueChanged"
                            IsSelectionRangeEnabled="True"
                            SelectionStart="0"
                            Value="{Binding Volume, Mode=TwoWay}"
                            SelectionEnd="{Binding Value, ElementName=VolumeSlider}"
                            Style="{DynamicResource SongProgressCustomSlider}"/>

                </Grid>
            </Grid>

        </Grid>

        <!-- Create Playlist overlay: centered card -->
        <Grid x:Name="CreatePlaylistOverlay" Grid.Row="0" Grid.RowSpan="3" Visibility="Collapsed" Panel.ZIndex="100">
            <Border x:Name="CreatePlaylistCardHost" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="CreatePlaylistCardTransform" X="0" Y="0"/>
                </Border.RenderTransform>
                <local:CreatePlaylistCard x:Name="CreatePlaylistCard"
                                          CreateClicked="CreatePlaylistCard_CreateClicked"
                                          CloseRequested="CreatePlaylistCard_CloseRequested"/>
            </Border>
        </Grid>

        <!-- Custom Playlist Context Menu Popup -->
        <!-- Uses a transparent dismiss-layer behind the card so any click outside closes it -->
        <Grid x:Name="PlaylistContextMenuOverlay"
              Grid.Row="1" Grid.RowSpan="2"
              Visibility="Collapsed"
              Panel.ZIndex="200"
              Background="{x:Null}">

            <!-- Extracted UserControl; positioned via Margin set in code-behind -->
            <local:PlaylistContextMenuCard x:Name="PlaylistContextMenuCard"
                                           HorizontalAlignment="Left" VerticalAlignment="Top"
                                           DeleteRequested="ContextMenuDeletePlaylist_Click"/>
        </Grid>



    </Grid>
</Window>


