<Window  x:Class="Mei_Music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mei Music" Height="500" Width="900"
        Deactivated="Window_Deactivated"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="#1E1E1E">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="0" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Background="#1b1f26" Grid.Row="0" Height="40" MouseDown="TitleBar_MouseDown">
            <DockPanel VerticalAlignment="Center">

                <!--Mei Music Icon-->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Mei Music" Foreground="#ebf2f4" FontSize="15" FontWeight="Bold" Margin="0,0,10,0"/>
                </StackPanel>

                <!-- Right Side (window control buttons) -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="â”€" Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}" />
                    <Button Content="â˜" Click="Maximize_Click" Style="{StaticResource TitleBarButtonStyle}" />
                    <Button Content="âœ•" Click="Close_Click" Style="{StaticResource TitleBarCloseButtonStyle}" />
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="195" MinWidth="195"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Border Grid.Row="0" Grid.Column="0" Background="#E9EDF2" Margin="0">
                <Grid Margin="10,12,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Primary scope selector: when checked, right panel shows all songs. -->
                    <RadioButton x:Name="AllSongsButton"
                                 Grid.Row="0"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,0,0,6"
                                 Content="All"
                                 IsChecked="True"
                                 Checked="AllSongsButton_Checked"
                                 ToolTip="Show all songs"
                                 Style="{StaticResource SidebarSelectableCardRadioButtonStyle}">
                        <RadioButton.Tag>
                            <Rectangle Width="16"
                                       Height="16"
                                       Fill="{StaticResource SidebarGlyphBrush}"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       SnapsToDevicePixels="True"
                                       UseLayoutRounding="True">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/Resources/Images/music-player.png"
                                                Stretch="Uniform"
                                                RenderOptions.BitmapScalingMode="Fant"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </RadioButton.Tag>
                    </RadioButton>

                    <!-- Secondary scope selector: reserved for user-liked songs. -->
                    <RadioButton x:Name="LikedSongsButton"
                                 Grid.Row="1"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,0,0,8"
                                 Content="Liked"
                                 Checked="LikedSongsButton_Checked"
                                 ToolTip="Show liked songs"
                                 Style="{StaticResource SidebarSelectableCardRadioButtonStyle}">
                        <RadioButton.Tag>
                            <Rectangle Width="16"
                                       Height="16"
                                       Fill="{StaticResource SidebarGlyphBrush}"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       SnapsToDevicePixels="True"
                                       UseLayoutRounding="True"
                                       RenderTransformOrigin="0.5,0.5">
                                <Rectangle.RenderTransform>
                                    <ScaleTransform ScaleX="0.92" ScaleY="0.92"/>
                                </Rectangle.RenderTransform>
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/Resources/Images/heart-filled.png"
                                                Stretch="Uniform"
                                                RenderOptions.BitmapScalingMode="Fant"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </RadioButton.Tag>
                    </RadioButton>

                    <Grid Grid.Row="2" Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ToggleButton x:Name="PlaylistsToggleButton"
                                      Grid.Column="0"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,0"
                                      VerticalAlignment="Center"
                                      IsChecked="True"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      Foreground="{StaticResource SidebarForegroundBrush}"
                                      Padding="7,0,0,0"
                                      Cursor="Hand">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Created Playlists"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{TemplateBinding Foreground}"
                                                                   VerticalAlignment="Center"/>
                                                        <Rectangle x:Name="PlaylistsArrowIcon"
                                                                   Width="12"
                                                                   Height="12"
                                                                   Margin="6,1,0,0"
                                                                   VerticalAlignment="Center"
                                                                   Fill="{TemplateBinding Foreground}"
                                                                   RenderOptions.BitmapScalingMode="Fant"
                                                                   SnapsToDevicePixels="True">
                                                            <Rectangle.OpacityMask>
                                                                <ImageBrush ImageSource="/Resources/Images/arrow-up.png"
                                                                            Stretch="Uniform"
                                                                            RenderOptions.BitmapScalingMode="Fant"/>
                                                            </Rectangle.OpacityMask>
                                                        </Rectangle>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="PlaylistsArrowIcon"
                                                                Property="OpacityMask">
                                                            <Setter.Value>
                                                                <ImageBrush ImageSource="/Resources/Images/arrow-down.png"
                                                                            Stretch="Uniform"
                                                                            RenderOptions.BitmapScalingMode="Fant"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>

                        <!-- Placeholder button: UI is present, logic intentionally not wired yet. -->
                        <Button x:Name="CreateAlbumButton"
                                Grid.Column="1"
                                Width="24"
                                Height="24"
                                Margin="8,0,0,0"
                                ToolTip="Create album (coming soon)"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Cursor="Hand"
                                VerticalAlignment="Center">
                            <Grid>
                                <Ellipse Fill="#DEE3EA"
                                         Width="24"
                                         Height="24"/>
                                <TextBlock Text="+"
                                           Foreground="#6B7380"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </Grid>

                    <!-- Album list is intentionally empty until user creates playlists. -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="PlaylistAlbumsContainer">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=PlaylistsToggleButton}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- Reusable sidebar action card; swap `Content` (label) and `Tag` (icon) per button. -->
                            <Button x:Name="CreateFirstPlaylistButton"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,2,0,0"
                                    Content="Create"
                                    ToolTip="Create playlist (coming soon)"
                                    Style="{StaticResource SidebarActionCardButtonStyle}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <GridSplitter Grid.Row="0"
                          Grid.Column="0"
                          Width="18"
                          HorizontalAlignment="Right"
                          Margin="0,0,-9,0"
                          VerticalAlignment="Stretch"
                          ResizeBehavior="CurrentAndNext"
                          ResizeDirection="Columns"
                          ShowsPreview="False"
                          Cursor="SizeWE"
                          Background="Transparent"
                          SnapsToDevicePixels="True"
                          Panel.ZIndex="10">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="Transparent"
                                SnapsToDevicePixels="True">
                            <Border x:Name="SplitterLine"
                                    Width="1"
                                    HorizontalAlignment="Center"
                                    Background="#B7BFCA"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="SplitterLine" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>

            <!-- Main Content on the Right -->
            <Grid Grid.Row="0" Grid.Column="1" Background="#ebecf0" VerticalAlignment="Stretch">
                <Border>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <!-- Playlist Label -->
                            <Label Content="Playlist" FontSize="15" HorizontalAlignment="Left"/>

                            <!-- Upload Button-->
                            <Button x:Name="PlusButton"
                                    ToolTip="Upload Audio"
                                    FontSize="25"
                                    Margin="0,0,70,0"
                                    Click="PlusButton_Click"
                                    Style="{StaticResource PlaylistToolbarButtonStyle}">
                                <TextBlock Text="+" 
                                           FontSize="20"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           Padding="0,0,0,2"/>
                            </Button>

                            <!-- Plus Popup Menu -->
                            <Popup x:Name="PlusPopupMenu" 
                                    PlacementTarget="{Binding ElementName=PlusButton}" 
                                    Placement="Bottom"  
                                    AllowsTransparency="True" 
                                    HorizontalOffset="-150">
                                <Border Background="#1E1E1E" CornerRadius="5" Width="175">
                                    <StackPanel>
                                        <Button Content="Upload from Computer" Style="{StaticResource DropdownItemStyle}" Click="UploadFromComputer_Click"/>
                                        <Button Content="Upload through URL" Style="{StaticResource DropdownItemStyle}" Click="SearchThroughURL_Click"/>
                                        <!-- Add more options as needed -->
                                    </StackPanel>
                                </Border>
                            </Popup>

                            <!-- Refresh Button -->
                            <Button x:Name="RefreshButton" 
                                    ToolTip="Refresh List"
                                    FontSize="20"
                                    Margin="0,0,40,0"
                                    Click="RefreshButton_Click"
                                    Style="{StaticResource PlaylistToolbarButtonStyle}">
                                <TextBlock Text="âŸ³" 
                                           FontSize="16"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           Padding="0,0,0,2"/>
                            </Button>

                            <!-- Sort Button -->
                            <Button x:Name="SortButton" 
                                    ToolTip="Sort List"
                                    Content="â†‘â†“" 
                                    Margin="0,0,12,0"
                                    Click="SortButton_Click"
                                    Style="{StaticResource PlaylistToolbarButtonStyle}"/>

                            <!-- Sort Popup Menu -->
                            <Popup x:Name="SortPopupMenu" 
                                    PlacementTarget="{Binding ElementName=PlusButton}" 
                                    Placement="Bottom"  
                                    AllowsTransparency="True" 
                                    HorizontalOffset="-92">
                                <Border Background="#1E1E1E" CornerRadius="5" Width="175">
                                    <StackPanel>
                                        <Button Content="Alphabetical Order" Style="{StaticResource DropdownItemStyle}" Click="SortAlphabetically_Click"/>
                                        <Button Content="Most Recent Modification" Style="{StaticResource DropdownItemStyle}" Click="SortByModification_Click"/>
                                        <!-- Add more options as needed -->
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- List Box for Uploaded Songs -->
                        <ListBox x:Name="UploadedSongList" 
                                Grid.Row="1"
                                HorizontalContentAlignment="Stretch" 
                                VerticalContentAlignment="Stretch"
                                ScrollViewer.CanContentScroll="True"
                                VirtualizingPanel.ScrollUnit="Pixel"
                                VirtualizingStackPanel.IsVirtualizing="True"
                                VirtualizingStackPanel.VirtualizationMode="Recycling"
                                SelectionChanged="PlaySelectedSong"
                                Style="{StaticResource CustomListBox}"
                                ItemContainerStyle="{StaticResource SongListStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Index Column -->
                                        <TextBlock Text="{Binding Index}" 
                                        VerticalAlignment="Center" 
                                        Margin="5,0,0,0" 
                                        Grid.Column="0"/>

                                        <!-- Song Name -->
                                        <TextBlock Text="{Binding Name}" 
                                        VerticalAlignment="Center" 
                                        Margin="5,0,10,0" 
                                        Grid.Column="1"/>

                                        <!-- Like Button: outline when not liked, filled when liked; no hover circle, tint darkens on hover. -->
                                        <Button Click="ToggleLike_Click"
                                                Tag="{Binding}"
                                                ToolTip="Like"
                                                Style="{StaticResource LikeButtonStyle}"
                                                Grid.Column="2"
                                                Margin="0,0,94,0">
                                            <Grid Width="16" Height="16" RenderTransformOrigin="0.5,0.5">
                                                <Grid.RenderTransform>
                                                    <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                                </Grid.RenderTransform>
                                                <Rectangle RenderOptions.BitmapScalingMode="Fant"
                                                           SnapsToDevicePixels="True">
                                                    <Rectangle.OpacityMask>
                                                        <ImageBrush ImageSource="/Resources/Images/heart.png"
                                                                    Stretch="Uniform"
                                                                    RenderOptions.BitmapScalingMode="Fant"/>
                                                    </Rectangle.OpacityMask>
                                                    <Rectangle.Style>
                                                        <Style TargetType="Rectangle">
                                                            <Setter Property="Fill" Value="{StaticResource SidebarGlyphBrush}"/>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsLiked}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                                                    <Setter Property="Fill" Value="{StaticResource SidebarGlyphHoverBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Rectangle.Style>
                                                </Rectangle>
                                                <Rectangle RenderOptions.BitmapScalingMode="Fant"
                                                           SnapsToDevicePixels="True">
                                                    <Rectangle.OpacityMask>
                                                        <ImageBrush ImageSource="/Resources/Images/heart-filled.png"
                                                                    Stretch="Uniform"
                                                                    RenderOptions.BitmapScalingMode="Fant"/>
                                                    </Rectangle.OpacityMask>
                                                    <Rectangle.Style>
                                                        <Style TargetType="Rectangle">
                                                            <Setter Property="Fill" Value="{StaticResource SidebarGlyphBrush}"/>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsLiked}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                                                    <Setter Property="Fill" Value="{StaticResource SidebarGlyphHoverBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Rectangle.Style>
                                                </Rectangle>
                                            </Grid>
                                        </Button>

                                        <!-- Rename Button -->
                                        <Button Content="ðŸ–Š" 
                                        ToolTip="Rename"
                                        Click="RenameSong_Click" 
                                        Tag="{Binding Name}"
                                        Style="{StaticResource SongItemActionButtonStyle}"
                                        Grid.Column="2"
                                        Margin="0,0,72,0"/>

                                        <!-- Volume Button -->
                                        <Button x:Name="SongVolumeButton" 
                                        ToolTip="Change volume"
                                        Content="ðŸ”Š" 
                                        Click="SongVolumeButton_Click" 
                                        Tag="{Binding Name}"
                                        Style="{StaticResource SongItemActionButtonStyle}"
                                        Grid.Column="2"
                                        Margin="0,0,50,0"/>

                                        <!-- Folder Button -->
                                        <Button Content="ðŸ“‚" 
                                        ToolTip="Open path"
                                        Click="OpenFolder_Click" 
                                        Tag="{Binding}" 
                                        Style="{StaticResource SongItemActionButtonStyle}"
                                        Grid.Column="2"
                                        Margin="0,0,27,0"/>

                                        <!-- Delete Button -->
                                        <Button Content="âŒ" 
                                        ToolTip="Delete"
                                        Click="DeleteSong_Click" 
                                        Tag="{Binding}" 
                                        Style="{StaticResource SongItemActionButtonStyle}"
                                        Grid.Column="2"
                                        Margin="0,0,5,0"/>

                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>


                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Grid.ColumnSpan="2" Height="48" Background="#F5F5F5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Previous Song Button-->
                    <Button Grid.Column="0" FontSize="25" 
                            Margin="25,0,-5,0" HorizontalAlignment="Left" 
                            RenderOptions.BitmapScalingMode="Fant"
                            x:Name="PreviousSongButton"
                            Click="PreviousSongClicked"
                            Style="{StaticResource TransportControlButtonStyle}">
                        <Image Source="/Resources/Images/previous_button.png" Width="45" Height="45"/>
                    </Button>

                    <!-- Stop Song Button-->
                    <Button Grid.Column="1" Padding="0,0,0,1" FontSize="33" 
                            x:Name="StopSongButton"
                            Click="StopSongClicked"
                            Margin="2,0,2,0"
                            RenderOptions.BitmapScalingMode="Fant"
                            HorizontalAlignment="Left" Style="{StaticResource TransportControlButtonStyle}">
                        <Image Source="/Resources/Images/pause_button.png" Width="35" Height="35"/>
                    </Button>

                    <!-- Next Song Button-->
                    <Button Grid.Column="2" FontSize="25" 
                            Margin="-5,0,15,0" HorizontalAlignment="Right"
                            RenderOptions.BitmapScalingMode="Fant"
                            x:Name="NextSongButton"
                            Click="NextSongClicked"
                            Style="{StaticResource TransportControlButtonStyle}">
                        <Image Source="/Resources/Images/next_button.png" Width="45" Height="45"/>
                    </Button>

                    <Grid Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="SongProgress_Timer" Grid.Column="0" Content="00:00" Margin="0,0,3,0"/>
                        <Slider Grid.Column="1" 
                                x:Name="SongProgressSlider" 
                                MinWidth="100" 
                                IsMoveToPointEnabled="False"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Center"
                                MouseMove="Slider_MouseMove"
                                PreviewMouseLeftButtonDown="SongProgressSlider_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="SongProgressSlider_PreviewMouseLeftButtonUp"
                                ValueChanged="SongProgressSlider_ValueChanged"
                                IsSelectionRangeEnabled="True"
                                SelectionStart="0"
                                SelectionEnd="{Binding Value, ElementName=SongProgressSlider}"
                                Style="{DynamicResource SongProgressCustomSlider}">
                        </Slider>

                        <Label x:Name="SongLength_Timer" Grid.Column="2" Content="00:00" Margin="5,0,0,0"/>
                    </Grid>

                    <Label Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Content="ðŸ”Š"/>

                    <Slider x:Name="VolumeSlider" 
                            Grid.Column="5" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            Width="100" 
                            Margin="0,0,15,0"
                            MouseMove="Slider_MouseMove"
                            PreviewMouseLeftButtonDown="Slider_PreviewMouseLeftButtonDown"
                            PreviewMouseLeftButtonUp="Slider_PreviewMouseLeftButtonUp"
                            Minimum="0"
                            Maximum="100"
                            ValueChanged="VolumeSlider_ValueChanged"
                            IsSelectionRangeEnabled="True"
                            SelectionStart="0"
                            SelectionEnd="{Binding Value, ElementName=VolumeSlider}"
                            Style="{DynamicResource SongProgressCustomSlider}"/>

                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Window>

