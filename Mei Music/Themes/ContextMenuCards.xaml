<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Reusable styling primitives for song/playlist context-menu cards.
        These styles keep both cards visually aligned while allowing different button sets per card.
    -->

    <!-- Shared shell + header visuals for large overlay cards (Create/Add playlist). -->
    <Thickness x:Key="PlaylistOverlayCardHeaderCloseInset">0,12,12,0</Thickness>

    <Style x:Key="PlaylistOverlayCardContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="ClipToBounds" Value="False"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="24"
                                  ShadowDepth="4"
                                  Opacity="0.35"
                                  Direction="270"
                                  Color="#000000"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PlaylistOverlayCardHeaderDragStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Cursor" Value="Arrow"/>
        <Setter Property="ClipToBounds" Value="False"/>
        <Setter Property="CornerRadius" Value="15,15,0,0"/>
    </Style>

    <Style x:Key="PlaylistOverlayCardCloseButtonStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="12,12"/>
        <Setter Property="Margin" Value="{StaticResource PlaylistOverlayCardHeaderCloseInset}"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="CloseBtnBorder"
                            Background="Transparent"
                            Padding="{TemplateBinding Padding}">
                        <Image x:Name="CloseIcon"
                               Source="/Resources/Images/close.png"
                               Width="18"
                               Height="18"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Opacity="0.5"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CloseIcon" Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PlaylistOverlayCardTitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <!--Card Title font size-->
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="24,40,24,0"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
    </Style>

    <!-- Outer floating card shell (rounded corners + subtle drop shadow). -->
    <Style x:Key="ContextMenuCardContainerBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="4,6"/>
        <Setter Property="MinWidth" Value="170"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="12"
                                  ShadowDepth="2"
                                  Opacity="0.14"
                                  Color="#000000"
                                  Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Shared overlay host: keeps all context cards in one click-through layer model. -->
    <Style x:Key="ContextMenuCardOverlayHostStyle" TargetType="Grid">
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="Grid.RowSpan" Value="3"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="Panel.ZIndex" Value="200"/>
        <Setter Property="Background" Value="{x:Null}"/>
    </Style>

    <!-- Standard action-row button style for non-destructive context actions. -->
    <Style x:Key="ContextMenuCardActionButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="BtnBorder"
                            Background="Transparent"
                            CornerRadius="6"
                            Padding="10,8">
                        <ContentPresenter HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BtnBorder" Property="Background" Value="#F0F2F5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Variant for destructive actions (for example delete) with danger hover cue. -->
    <Style x:Key="ContextMenuCardActionButtonDestructiveStyle"
           TargetType="Button"
           BasedOn="{StaticResource ContextMenuCardActionButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="BtnBorder"
                            Background="Transparent"
                            CornerRadius="6"
                            Padding="10,8">
                        <ContentPresenter HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BtnBorder" Property="Background" Value="#FFF0F0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Shared horizontal row container used inside each context action button. -->
    <Style x:Key="ContextMenuCardRowLayoutStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Glyph/label visual primitives used by both card types. -->
    <Style x:Key="ContextMenuCardGlyphRectangleStyle" TargetType="Rectangle">
        <Setter Property="Width" Value="18"/>
        <Setter Property="Height" Value="18"/>
        <Setter Property="Fill" Value="#6B7380"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
    </Style>

    <Style x:Key="ContextMenuCardGlyphRectangleDestructiveStyle"
           TargetType="Rectangle"
           BasedOn="{StaticResource ContextMenuCardGlyphRectangleStyle}">
        <Setter Property="Fill" Value="#E05555"/>
    </Style>

    <Style x:Key="ContextMenuCardGlyphTextStyle" TargetType="TextBlock">
        <Setter Property="Width" Value="16"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#6B7380"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ContextMenuCardLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#444444"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
    </Style>

    <Style x:Key="ContextMenuCardLabelDestructiveStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource ContextMenuCardLabelStyle}">
        <Setter Property="Foreground" Value="#E05555"/>
    </Style>

    <Style x:Key="ContextMenuCardDividerStyle" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="#EBEBEB"/>
        <Setter Property="Margin" Value="6,2"/>
    </Style>

</ResourceDictionary>
