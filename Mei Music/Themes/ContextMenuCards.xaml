<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Reusable styling primitives for song/playlist context-menu cards.
        These styles keep both cards visually aligned while allowing different button sets per card.
    -->

    <!-- Outer floating card shell (rounded corners + subtle drop shadow). -->
    <Style x:Key="ContextMenuCardContainerBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="4,6"/>
        <Setter Property="MinWidth" Value="170"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="18"
                                  ShadowDepth="3"
                                  Opacity="0.18"
                                  Color="#000000"
                                  Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Standard action-row button style for non-destructive context actions. -->
    <Style x:Key="ContextMenuCardActionButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="BtnBorder"
                            Background="Transparent"
                            CornerRadius="6"
                            Padding="10,8">
                        <ContentPresenter HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BtnBorder" Property="Background" Value="#F0F2F5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Variant for destructive actions (for example delete) with danger hover cue. -->
    <Style x:Key="ContextMenuCardActionButtonDestructiveStyle"
           TargetType="Button"
           BasedOn="{StaticResource ContextMenuCardActionButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="BtnBorder"
                            Background="Transparent"
                            CornerRadius="6"
                            Padding="10,8">
                        <ContentPresenter HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BtnBorder" Property="Background" Value="#FFF0F0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Shared horizontal row container used inside each context action button. -->
    <Style x:Key="ContextMenuCardRowLayoutStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Glyph/label visual primitives used by both card types. -->
    <Style x:Key="ContextMenuCardGlyphRectangleStyle" TargetType="Rectangle">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Fill" Value="#6B7380"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="Fant"/>
    </Style>

    <Style x:Key="ContextMenuCardGlyphRectangleDestructiveStyle"
           TargetType="Rectangle"
           BasedOn="{StaticResource ContextMenuCardGlyphRectangleStyle}">
        <Setter Property="Fill" Value="#E05555"/>
    </Style>

    <Style x:Key="ContextMenuCardGlyphTextStyle" TargetType="TextBlock">
        <Setter Property="Width" Value="16"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#6B7380"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ContextMenuCardLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13.5"/>
        <Setter Property="Foreground" Value="#444444"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>

    <Style x:Key="ContextMenuCardLabelDestructiveStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource ContextMenuCardLabelStyle}">
        <Setter Property="Foreground" Value="#E05555"/>
    </Style>

    <Style x:Key="ContextMenuCardDividerStyle" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="#EBEBEB"/>
        <Setter Property="Margin" Value="6,2"/>
    </Style>

</ResourceDictionary>
