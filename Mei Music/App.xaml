<Application x:Class="Mei_Music.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Mei_Music">
    <!--
        Global application resources.
        Theme dictionaries are merged here so every window/control can consume a shared visual language.
    -->
    <Application.Resources>
        <ResourceDictionary>
            <!-- Resource dictionaries are loaded in dependency order: colors -> controls -> composite styles. -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Colors.xaml"/>
                <ResourceDictionary Source="Themes/Buttons.xaml"/>
                <ResourceDictionary Source="Themes/ContextMenuCards.xaml"/>
                <ResourceDictionary Source="Themes/Sliders.xaml"/>
                <ResourceDictionary Source="Themes/SidebarCards.xaml"/>
                <ResourceDictionary Source="Themes/ListBoxes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
